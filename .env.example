# Environment variables for YOLO Box Counting Engine

# Roboflow API Configuration
ROBOFLOW_API_KEY=your_roboflow_api_key_here
ROBOFLOW_API_ENDPOINT=https://detect.roboflow.com/shoeboxes-rwv5h/2
ROBOFLOW_WORKSPACE=your_workspace_name
ROBOFLOW_PROJECT=box-detection

# Model Configuration
MODEL_PATH=models/best.pt
DETECTION_BACKEND=roboflow # options: roboflow, local
CONFIDENCE_THRESHOLD=0.5
IOU_THRESHOLD=0.45

# Label Processing Configuration
USE_PYZBAR=false  # Set to true for better barcode detection (requires zbar installed)
ENABLE_OCR=false  # Set to true to enable OCR fallback (may crash on unsupported hardware)

# Application Settings
DEBUG=False
MAX_IMAGE_SIZE=1280
BATCH_SIZE=16