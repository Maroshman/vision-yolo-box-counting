# Environment variables for Cloud Run deployment
# Copy this to .env.cloud and fill in your values

# Cloud Run Configuration
PORT=8080
HOST=0.0.0.0

# Detection Backend (roboflow or local)
DETECTION_BACKEND=roboflow

# Roboflow API Configuration
ROBOFLOW_API_KEY=your_roboflow_api_key_here
ROBOFLOW_API_ENDPOINT=https://detect.roboflow.com/shoeboxes-rwv5h/2

# Local Model Configuration (used when DETECTION_BACKEND=local)
MODEL_PATH=models/best.pt
CONFIDENCE_THRESHOLD=0.5
IOU_THRESHOLD=0.45

# Processing Configuration
ENABLE_OCR=true
USE_PYZBAR=false

# Application Settings
DEBUG=false
MAX_IMAGE_SIZE=1280